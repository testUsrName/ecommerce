<%- include('layout', { 
    title: '我的订单',
    body: `
        <h1 class="text-3xl font-bold mb-6 text-gray-800">我的订单</h1>
        
        <% if (orders.length === 0) { %>
            <div class="bg-white rounded-lg shadow-md p-8 text-center">
                <i class="fas fa-file-invoice text-6xl text-gray-300 mb-4"></i>
                <h2 class="text-xl font-semibold mb-2">暂无订单</h2>
                <p class="text-gray-500 mb-6">您还没有任何订单</p>
                <a href="/" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md transition inline-block">
                    浏览商品
                </a>
            </div>
        <% } else { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">订单编号</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">日期</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">总金额</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% orders.forEach(order => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900"><%= order.id %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500"><%= new Date(order.created_at).toLocaleString() %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">¥<%= order.total_amount.toFixed(2) %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <a href="/orders/<%= order.id %>" class="text-blue-600 hover:text-blue-900 mr-4">
                                        <i class="fas fa-eye mr-1"></i> 查看详情
                                    </a>
                                    <a href="/orders/<%= order.id %>/export/pdf" class="text-green-600 hover:text-green-900 mr-4">
                                        <i class="fas fa-file-pdf mr-1"></i> PDF
                                    </a>
                                    <a href="/orders/<%= order.id %>/export/csv" class="text-orange-600 hover:text-orange-900">
                                        <i class="fas fa-file-csv mr-1"></i> CSV
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    `
}) %>
