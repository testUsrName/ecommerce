<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t('orderList.title') || '我的订单' %></title>
    <!-- 引入 Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- 引入 Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100 min-h-screen">
    <%- include('partials/navbar') %>

    <!-- 主内容区域 -->
    <main class="container mx-auto px-4 py-8">
        <!-- 消息提示区域 -->
        <% if (success_msg) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6" role="alert">
                <span class="block sm:inline"><%= success_msg %></span>
            </div>
        <% } %>
        <% if (error_msg) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6" role="alert">
                <span class="block sm:inline"><%= error_msg %></span>
            </div>
        <% } %>

        <h1 class="text-3xl font-bold mb-6 text-gray-800"><%= t('orderList.header') || '我的订单' %></h1>
        
        <% if (orders.length === 0) { %>
            <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-8 text-center">
                <i class="fas fa-file-invoice text-6xl text-gray-300 mb-4"></i>
                <h3 class="text-xl font-semibold mb-2"><%= t('orderList.emptyTitle') || '暂无订单' %></h3>
                <p class="text-gray-500 mb-6"><%= t('orderList.emptyMessage') || '您还没有任何订单' %></p>
                <a href="/" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md transition inline-block">
                    <%= t('orderList.shopNow') || '浏览商品' %>
                </a>
            </div>
        <% } else { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6 border border-gray-200 hover:shadow-lg transition">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('orderList.id') || '订单编号' %></th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('orderList.date') || '日期' %></th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('orderList.totalAmount') || '总金额' %></th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('orderList.actions') || '操作' %></th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% orders.forEach(order => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900"><%= order.id %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500"><%= new Date(order.created_at).toLocaleString() %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">¥<%= order.total_amount.toFixed(2) %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <a href="/orders/<%= order.id %>" class="text-blue-600 hover:text-blue-900 mr-4">
                                        <i class="fas fa-eye mr-1"></i> <%= t('orderList.viewDetails') || '查看详情' %>
                                    </a>
                                    <a href="/orders/<%= order.id %>/export/pdf" class="text-green-600 hover:text-green-900 mr-4">
                                        <i class="fas fa-file-pdf mr-1"></i> PDF
                                    </a>
                                    <a href="/orders/<%= order.id %>/export/csv" class="text-orange-600 hover:text-orange-900">
                                        <i class="fas fa-file-csv mr-1"></i> CSV
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </main>

    <%- include('partials/footer') %>
</body>
</html>