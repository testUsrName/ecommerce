<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> - <%= t('productDetail.title') %></title>
    <!-- 引入 Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- 引入 Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100 min-h-screen">
    <!-- 导航栏 -->
    <%- include('partials/navbar') %>

    <!-- 主内容区域 -->
    <main class="container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 p-6">
                <!-- 商品图片 -->
                <div class="flex justify-center items-center">
                    <% if (product.image_url) { %>
                        <img src="<%= product.image_url %>" alt="<%= product.name %>" class="max-w-full max-h-96 object-contain">
                    <% } else { %>
                        <div class="w-full h-64 flex items-center justify-center bg-gray-200">
                            <i class="fas fa-box text-7xl text-gray-400"></i>
                        </div>
                    <% } %>
                </div>

                <!-- 商品信息 -->
                <div>
                    <h1 class="text-3xl font-bold mb-3 text-gray-800"><%= product.name %></h1>
                    <p class="text-gray-500 text-lg mb-4"><%= t('productDetail.model') %>: <%= product.model || t('productDetail.none') %></p>
                    <div class="mb-6">
                        <span class="text-2xl font-bold text-red-600">¥<%= product.price.toFixed(2) %></span>
                        <span class="text-gray-500 ml-2"><%= t('productDetail.stock') %>: <%= product.quantity %></span>
                    </div>
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold mb-2 text-gray-800"><%= t('productDetail.description') %></h2>
                        <p class="text-gray-600"><%= product.description %></p>
                    </div>
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold mb-2 text-gray-800"><%= t('productDetail.notes') %></h2>
                        <p class="text-gray-600"><%= product.notes || t('productDetail.none') %></p>
                    </div>
                    <div class="flex space-x-4 mt-8">
                        <div class="flex items-center">
                            <span class="text-gray-600 mr-2"><%= t('productDetail.quantity') %>:</span>
                            <input type="number" id="quantity" value="1" min="1" max="<%= product.quantity %>" class="w-16 border border-gray-300 rounded px-2 py-1 text-sm">
                        </div>
                        <button onclick="addToCart(<%= product.id %>)" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition">
                            <i class="fas fa-shopping-cart mr-1"></i> <%= t('productDetail.addToCart') %>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- 添加购物车脚本 -->
    <script>
        // 添加到购物车
        function addToCart(productId) {
            const quantity = document.getElementById('quantity').value;

            // 发送POST请求到购物车添加接口
            fetch('/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `productId=${productId}&quantity=${quantity}`
            })
            .then(response => response.text())
            .then(html => {
                // 刷新页面以显示更新后的购物车和消息
                window.location.reload();
            })
            .catch(error => {
                console.error('添加到购物车失败:', error);
                alert('添加到购物车失败，请稍后再试。');
            });
        }
    </script>

    <!-- 页脚 -->
    <%- include('partials/footer') %>
</body>
</html>